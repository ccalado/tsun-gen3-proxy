    "python.testing.pytestArgs": [
        "-vv", 
        "app",
        "--cov=app/src",
        "--cov-report=xml",
        "--cov-report=html",
        "system_tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "flake8.args": [
        "--extend-exclude=app/tests/*.py system_tests/*.py"   
    ]
}